#!/usr/bin/env sh

#
# plle.venv
#

apath=$(dirname "$(realpath "${0}")")

usage () {
    echo "Usage: source $(basename "${0}") [-h]"
    echo 'Append the directory of this script to PATH'
    echo '	-h	display this help message'
    exit 0
}

while getopts h opt
do
    case "${opt}"
    in
        h | *)
            usage
            ;;
    esac
done

export PATH="${PATH}:${apath}"
